<% layout("/layouts/boilerplate") %>


<div class="row">
<div class="col-8 offset-2">


    <h3>Edit your Listing</h3>

   <form  method="post" action="/listings/<%= listing._id %>?_method=PUT">
<div class="mb-3">
    <label for="title" class="from-label" >Title</label>
    <input name="listing[title]" 
    value="<%= listing.title %>"
     type="text"
     class="from-control">
</div>
    
    <div class="mb-3">
        <label for="description" class="from-label" >Description</label>
        <textarea name="listing[description]" 
        class="from-control"
        ><%= listing.description %></textarea>

    </div>
   
   <div class="mb-3">
    <label for="image" class="from-label" >Image Link</label>
    <input name="listing[image]" 
    value="<%= listing.image %>" 
    type="text" 
    class="from-control"
    >
   </div>
    
<div class="mb-3">
    <label for="price" class="from-label" >Price</label>
    <input name="listing[price]"
     value="<%= listing.price %>" 
      type="number"
      class="from-control"
      >

</div>
   


    <div class="mb-3">
        <label for="country" class="from-label" >Country</label>
        <input name="listing[country]" 
        value="<%= listing.country %>"  
        type="text"
        class="from-control"
        >
</div>

<div class="mb-3">
    <label for="location" class="from-label" > Location</label>
    <input name="listing[location]" 
    value="<%= listing.location %>"  
    type="text"
    class="from-control"
    >
</div>
    
    <button class=" btn btn-dark edit-btn  mt-3">Edit</button>
</form>
</div>
</div>
   