<% layout("/layouts/boilerplate") %>


<div class="row">
 <div class="col-8 offset-2">
  <h3>Create a New Listing</h3>
   <form method="POST" action="/listings"  novalidate class="needs-validation" >
 
    <div class="mb-3">
        <label for="title" class="from-label" >Title</label>
        <input name="listing[title]" 
        placeholder="enter title" 
        type="text"
         class="from-control"
         required
         />
    </div>
   
   <div class="mb-3">
    <label for="description" class="from-label" >Description</label>
    <textarea name="listing[description]" 
    placeholder="enter description"
    class="from-control"
    required
     ></textarea>
   </div>
   
 <div  class="mb-3">
    <label for="image" class="from-label" >Image Link</label>
    <input name="listing[image]" 
    placeholder="enter image URL/Link"
    type="text" 
    class="from-control" />
 </div>
   
 <div class="row">

  <div  class="mb-3 col-4">
    <label for="price" class="from-label" >Price</label>
    <input name="listing[price]"
     placeholder="enter price"
      type="number"
       class="from-control"
       required 
       />
 </div>
  
  <div  class="mb-3 col-8">
    <label for="country" class="from-label" >Country</label>
    <input name="listing[country]" 
    placeholder="enter country"
     type="text"  
     class="from-control" 
     required
      />
  </div>

 </div>


  <div  class="mb-3">
    <label for="location" class="from-label" > Location</label>
    <input name="listing[location]"
     placeholder="enter location" 
     type="text"
     class="from-control" 
     required
     />

  </div>
   
    <br><br>
    <button class="btn btn-dark add-btn">Add</button>
   </form>
  </div> 
  </div>
